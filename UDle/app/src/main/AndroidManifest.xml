<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.epfl.sweng.udle" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
        <activity android:name=".MapActivity" >
        </activity>
        <activity android:name=".MenuActivity" >
        </activity>
        <activity android:name=".OptionsActivity" >
        </activity>
        <activity android:name=".DrinkActivity" >
        </activity>
        <activity android:name=".RecapActivity" >
        </activity>
        <activity android:name=".WaitingActivity" >
        </activity>
        <activity android:name=".PaymentActivity" >
        </activity>
        <activity android:name=".DeliveryActivity" >
        </activity>
        <activity android:name=".SlideMenuActivity" >
        </activity>
        <activity android:name=".DeliveryMapActivity" >
        </activity>
        <activity android:name=".DeliverCommandDetailActivity" >
        </activity>
    </application>

</manifest>
