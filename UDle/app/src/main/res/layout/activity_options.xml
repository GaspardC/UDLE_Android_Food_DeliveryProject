<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ch.epfl.sweng.udle.activities.MenuOptionsDrinks.OptionsFragment"
    android:id="@+id/Layout_Options"
    android:background="@drawable/options">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:id="@+id/Options_noMenuSelected"
        android:text="@string/noMenuNoOptions"
        android:visibility="gone"/>

    <ExpandableListView
        android:id="@+id/MenuElement_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:childDivider="#00000000">
    </ExpandableListView>



    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Next"
        android:id="@+id/optionNext"
        android:layout_weight="20"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:background="@drawable/button_shape2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:layout_margin="@dimen/_3sdp"
        android:shadowDy="0"
        android:shadowRadius="5"/>


</LinearLayout>
