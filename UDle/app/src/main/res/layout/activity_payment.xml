<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.epfl.sweng.udle.PaymentActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAY"
        android:id="@+id/payment_button_1"
        android:onClick="goToPaymentAPI1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAYMENT OF THE ORDER"
        android:id="@+id/payment_TextView_1"
        android:textSize="30dp"
        android:textIsSelectable="true"
        android:textColor="#070707"
        android:layout_column="0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/payment_button_1"
        android:layout_toStartOf="@+id/payment_button_1"
        android:layout_alignRight="@+id/payment_TextView_1"
        android:layout_alignEnd="@+id/payment_TextView_1"
        android:layout_below="@+id/payment_TextView_1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit card informations:"
                android:id="@+id/payment_TextView_2"
                android:textSize="25dp"
                android:textIsSelectable="true"
                android:textColor="#070707"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/payment_TextView_1"
                android:layout_alignStart="@+id/payment_TextView_1"
                android:layout_column="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MasterCard"
                android:id="@+id/radioButton2"
                android:checked="false"
                android:layout_alignTop="@+id/radioButton"
                android:layout_toRightOf="@+id/radioButton"
                android:layout_toEndOf="@+id/radioButton"
                android:layout_column="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visa"
                android:id="@+id/radioButton"
                android:checked="false"
                android:layout_below="@+id/payment_TextView_2"
                android:layout_alignLeft="@+id/payment_TextView_2"
                android:layout_alignStart="@+id/payment_TextView_2"
                android:layout_column="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security Code"
                android:id="@+id/payment_EditText_4"
                android:singleLine="true"
                android:textSize="20dp"
                android:layout_below="@+id/payment_EditText_3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiration Date"
                android:id="@+id/payment_EditText_5"
                android:singleLine="true"
                android:textSize="20dp"
                android:layout_below="@+id/payment_EditText_4"
                android:layout_alignLeft="@+id/radioButton"
                android:layout_alignStart="@+id/radioButton"
                android:layout_column="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick a Date"
                android:id="@+id/payment_button_2"
                android:layout_above="@+id/payment_button_1"
                android:layout_toRightOf="@+id/payment_EditText_5"
                android:layout_toEndOf="@+id/payment_EditText_5"
                android:layout_column="0" />
        </TableRow>
    </TableLayout>


</RelativeLayout>
