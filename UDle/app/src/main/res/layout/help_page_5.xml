<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/help_page_5_imageView"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/how_to_use_6th_screen"
        />
    <Button
        android:layout_above="@id/help_page_2_imageView"
        android:layout_margin="@dimen/_3sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:text="Start !"
        android:onClick="goToOrderActivity"
        android:textColor="@color/colorUdle"
        android:background="@drawable/button_shape_empty"/>

</RelativeLayout>